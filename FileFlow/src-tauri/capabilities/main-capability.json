{
  "$schema": "./schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "path:default",
    "window:default",
    "window:allow-close",
    "window:allow-toggle-maximize",
    "window:allow-set-fullscreen",
    "window:allow-start-dragging",
    "window:allow-minimize",
    "dialog:default",
    "dialog:allow-ask",
    "dialog:allow-open",
    "event:default",
    "store:default",
    "store:allow-get",
    "store:allow-set",
    "store:allow-save",
    "store:allow-load",
    "store:allow-entries",
    "store:allow-delete",
    "store:allow-clear",
    "store:allow-reset",
    "menu:default",
    "menu:allow-new",
    "menu:allow-popup",
    "menu:allow-set-as-app-menu"
  ]
}